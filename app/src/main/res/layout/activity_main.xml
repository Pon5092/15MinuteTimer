<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:background="#03A9F4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="１５分計るんだー"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/timer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="99:99"
        android:textSize="100sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_stop"
        app:layout_constraintEnd_toStartOf="@id/laps"
        app:layout_constraintTop_toBottomOf="@id/title" />
    <TextView
        android:id="@+id/laps"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="ラップ数"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/lap_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="99"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/laps"
        app:layout_constraintStart_toStartOf="@id/laps"
        app:layout_constraintEnd_toEndOf="@id/laps"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lap_num"
        app:layout_constraintStart_toStartOf="@+id/laps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/next_lap"/>
    <Button
        android:id="@+id/start_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="開始/一時停止"/>
    <Button
        android:id="@+id/plus_one_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/start_stop"
        android:text="＋１分"/>
    <Button
        android:id="@+id/plus_five_min"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/plus_one_min"
        android:text="＋５分"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/plus_five_min"
        android:text="リセット"/>
    <Button
        android:id="@+id/next_lap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="次"
        app:layout_constraintStart_toEndOf="@id/reset"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>